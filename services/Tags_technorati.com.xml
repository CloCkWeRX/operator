<?xml version="1.0" encoding="utf-8"?>
<openServiceDescription xmlns="http://www.microsoft.com/schemas/openservicedescription/1.0">
  <display>
    <name>Find blogs on technorati</name>
    <icon>http://technorati.com/favicon.ico</icon>
  </display>
  <homepageUrl>http://technorati.com</homepageUrl>
  <activity category="Tags">
    <activityAction context="tag">
      <execute method="get" action="http://technorati.com/tag/{tag}"/>
    </activityAction>
  </activity>
</openServiceDescription>
